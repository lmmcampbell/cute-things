<p id="notice"><%= notice %></p>

<h1>Cuties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuties.each do |cuty| %>
      <tr>
        <td><%= cuty.name %></td>
        <td><%= cuty.description %></td>
        <td><%= cuty.image %></td>
        <td><%= link_to 'Show', cuty %></td>
        <td><%= link_to 'Edit', edit_cuty_path(cuty) %></td>
        <td><%= link_to 'Destroy', cuty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

